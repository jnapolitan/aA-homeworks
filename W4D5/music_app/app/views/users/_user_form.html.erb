<% if flash.now[:errors] %>
  <ul>
    <% flash.now[:errors].each do |error| %>
      <li> <%= error %> </li>
    <% end %>
  </ul>
<% end %>


<h3><%= message %></h3>

<form action=" <%= action_url %> " method="post">
  <%= auth_token %>
  <label>Email:
    <input type="text" name="user[email]" value="">
  </label>
  <label>Password:
    <input type="password" name="user[password]" value="">
  </label>
    <input type="submit" name="" value="<%= message %>" id="submit">
</form>
